apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-demo
  namespace: project1
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx-demo
  template:
    metadata:
      labels:
        app: nginx-demo
    spec:
      containers:
        - name: nginx
          image: {{ image }}
          ports:
            - containerPort: 80
      imagePullSecrets:
        - name: acr-secret
